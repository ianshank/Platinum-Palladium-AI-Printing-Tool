        },
        "events": {
          "click": "onClick"
        },
        "notes": "Add loading state for async actions"
      }
    },
    "media": {
      "gr.Image": {
        "react": "ImageUpload",
        "package": "@/components/ImageUpload",
        "props": {
          "value": "src",
          "type": "mode (upload | display)",
          "sources": "accept types",
          "tool": "editMode",
          "height": "height",
          "width": "width"
        },
        "events": {
          "change": "onUpload",
          "upload": "onUpload",
          "clear": "onClear",
          "select": "onSelect"
        },
