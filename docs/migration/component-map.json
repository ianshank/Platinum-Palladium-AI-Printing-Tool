          "value": "value",
          "label": "aria-label",
          "placeholder": "placeholder",
          "lines": "multiline (use Textarea if > 1)",
          "max_lines": "rows",
          "interactive": "!disabled",
          "visible": "conditional render",
          "elem_id": "id",
          "elem_classes": "className"
