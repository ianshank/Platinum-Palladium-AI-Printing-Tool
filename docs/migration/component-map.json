          "Tabs": "Tabs.Root",
          "Tab": "Tabs.Trigger (in Tabs.List)",
          "TabPanel": "Tabs.Content"
        },
        "notes": "Persist active tab in Zustand"
      },
      "gr.Accordion": {
        "react": "Accordion",
        "package": "@radix-ui/react-accordion",
        "props": {
