        },
        "notes": "Use virtual scrolling for large datasets"
      },
      "gr.State": {
        "react": "Zustand store slice",
        "notes": "Use store slice instead of component state"
      },
      "gr.Blocks": {
        "react": "React component tree",
        "notes": "Natural React component composition"
      }
    }
  },
  "patterns": {
    "visibility": {
      "gradio": "visible=False",
      "react": "{condition && <Component />}"
    },
    "interactivity": {
      "gradio": "interactive=False",
      "react": "disabled={true}"
    },
    "callbacks": {
      "gradio": ".change(fn, inputs=[...], outputs=[...])",
      "react": "onChange={(value) => { setState(value); /* side effects */ }}"
    },
    "events": {
      "gradio": "component.change(handler).then(next_handler)",
      "react": "async onChange handlers or useEffect for side effects"
    }
  }
}
